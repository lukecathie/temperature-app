<!DOCTYPE html>
<html>
<head>
  <title>Temp</title>
  <meta http-equiv="refresh" content="50" >
  <style type="text/css">
    body {
      font-family: 'Helvetica Neue'
    }
    h1 {
      font-weight: 100;
    }
    h1 small {
      font-size: 12px;
    }
  </style>
</head>
<body>

  <% if @last %>
    <h1 title="<%= @last.temperature %>"><%= (@last.temperature / 1000).round(2) %>â„ƒ <small>at <%= @last.time.strftime("%d/%m/%Y at %-I:%M%p").downcase  %></small></h1>
  <% end %>

  <p>
    <canvas id="myChart" height="400" width="800"></canvas>
  </p>
  <!-- 
  <% @logs.each do |_,log| %>
    <%= log.temperature %> |
  <% end %> -->




  <script src="/chart.min.js"></script>

  <script type="text/javascript">
    var data = {
      labels : <%= (@logs.map{|_,l|l.time.strftime("%H:%M")}) %>,
      datasets : [
        {
          fillColor : "rgba(220,220,220,0.5)",
          strokeColor : "rgba(220,220,220,1)",
          pointColor : "rgba(220,220,220,1)",
          pointStrokeColor : "#fff",
          data : <%= (@logs.map{|_,l|(l.temperature.to_f/1000)}) %>
        }
      ]
    };
    console.log(data);
    var options = {};
    var ctx = document.getElementById("myChart").getContext("2d");
    new Chart(ctx).Line(data,options);
  </script>

</body>
</html>
